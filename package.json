{
  "name": "openperiscope",
  "version": "1.2.0",
  "description": "Unofficial Periscope client",
  "license": "GPL-2.0",
  "repository": "Pmmlabs/OpenPeriscope",
  "dependencies": {
    "ws": "*"
  },
  "main": "app://openperiscope/index.html",
  "webkit": {
    "plugin": true
  },
  "chromium-args": "--ppapi-flash-path=plugins/libpepflashplayer.so",
  //"chromium-args": "--ppapi-flash-path=c:\\Windows\\System32\\Macromed\\Flash\\pepflashplayer32_21_0_0_213.dll",
  //"chromium-args": "--ppapi-flash-path=c:\\Windows\\System32\\Macromed\\Flash\\pepflashplayer64_21_0_0_213.dll",
  "single-instance": false,
  "window": {
    "icon": "images/openperiscope.png",
    "toolbar": true,
    "frame": true,
    "position": "center",
    "width": 800,
    "height": 500,
    "min_width": 550,
    "min_height": 200
  }
}